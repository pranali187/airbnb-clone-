<% if (succes && succes.length) { %>
    <div class="alert alert-success alert-dismissible fade show col_6 offset-8" role="alert">
        <%= succes %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>

<% if (error && error.length) { %>
    <div class="alert alert-danger alert-dismissible fade show col_6 offset-8" role="alert">
        <%= error %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <% } %>
