<% layout("/layouts/boilerplate") %>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">SignUp</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input name="username" id="username" placeholder="Add a Title" type="text" class="form-control"
                        required>
                    <div class="valid-feedback">looks good!</div>
                    <div class="invalid-feedback">Please enter valid username</div>
                </div>

                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input name="email" id="email" placeholder="Add a email" type="email" class="form-control"
                        required>
                    <div class="valid-feedback">looks good!</div>
                    <div class="invalid-feedback">Please enter valid email</div>
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input name="password" id="password" placeholder="Add a password" type="password" class="form-control"
                        required>
                    <div class="valid-feedback">looks good!</div>
                    <div class="invalid-feedback">Please enter valid password</div>
                </div>

                <button class="btn btn-dark add-btn">SignUp</button>
            </form>
        </div>
    </div>